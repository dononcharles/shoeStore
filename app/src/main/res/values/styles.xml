<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="nextUiBtnStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:drawableEnd">@drawable/baseline_navigate_next_24</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="instructionTextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="customTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
    </style>

    <style name="shoeDetailButtonCustomStyle">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
